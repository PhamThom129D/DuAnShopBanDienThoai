<HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duan.Login">
    <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0">
        <Label style="-fx-font-size: 70px; -fx-text-fill: blue;" text="Login">Đăng Nhập</Label>
        <HBox alignment="CENTER" prefHeight="89.0" prefWidth="800.0">
            <children>
                <Label prefHeight="30.0" prefWidth="141.0" style="-fx-font-size: 25px" text="Username">Tên đăng nhập</Label>
                <TextField fx:id="username" maxWidth="250" prefHeight="20.0" promptText="Enter your username" style="-fx-font-size: 15px; -fx-padding: 10px; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: lightgray; -fx-border-width: 1px;" />
            </children>
        </HBox>
          <HBox alignment="CENTER" prefHeight="83.0" prefWidth="800.0">
              <children>
                  <Label prefHeight="42.0" prefWidth="141.0" style="-fx-font-size: 25px" text="Password" />
                    <PasswordField fx:id="password" maxWidth="250" prefHeight="20.0" prefWidth="185.0" promptText="Enter your password" style="-fx-font-size: 15px; -fx-padding: 10px; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: lightgray; -fx-border-width: 1px;" />
              </children>
          </HBox>
        <Button alignment="CENTER" onAction="#Login" prefHeight="39.0" prefWidth="88.0"
                style="-fx-background-color: #adc7e7;" text="Login" textAlignment="CENTER">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font>
        </Button>
        <HBox alignment="BOTTOM_CENTER" prefHeight="83.0" prefWidth="800.0">
            <children>
                <Hyperlink onAction="#showSignUp" text="You don't have an account?">
               <font>
                  <Font size="14.0" />
               </font></Hyperlink>
                <Hyperlink onAction="#forgetPassword" text="Forget Password">
               <font>
                  <Font size="14.0" />
               </font></Hyperlink>
            </children>
        </HBox>
    </VBox>
</HBox>
